	<div class="page-wrapper" id="page-wrapper">
		<main class="content">
			<div class="container-fluid flex d-flex">
				<div class="row flex align-items-center">
					<div class="col-lg-6 d-flex flex h-lg-down  full-height bg-pattern bg-fHeight" id="backImg" style="background-image: url(<%=request.getContextPath()%>/resources/images/error.jpeg);">
						<div style="font-size: 34px; display: block;">
						</div>
					</div>
					<div class="col-lg-5 col-md-4 align-items-center col-sm-6 ml-auto flex d-flex mr-auto full-height pt-40 pb-20">
						<div class="w100 d-block text-center">
							<a href="<c:url value='/home' />" class="avatar avatar60 ml-auto mr-auto bg-warning text-white rounded-circle">500</a>
