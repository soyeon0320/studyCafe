/* 공지사항 롤링 */
.rolling_box{
    width: 300px;
    height: 40px;
}

.rolling_box ul {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    color: white;
}

.rolling_box ul li {
    width: 100%;
    height: 100%;
    transition: .5s;
    position:absolute;
    transition: top .75s;
    top: 100%;
    z-index: 1;
    background-color: #69c1e6;
    list-style: none;
    text-overflow: ellipsis;
}

.card_sliding{
    top: 0 !important;
    z-index: 100 !important;
} 

.card_sliding_after{
    top: -100% !important;
    z-index: 10 !important;
}

.rolling_box ul li p {
    font-size: 1.1rem;
    line-height: 40px;
    max-width:270px;
    overflow: hidden; white-space: nowrap; text-overflow: ellipsis;
}
.before_slide {
    transform: translateY(100%);
}
.after_slide {
    transform: translateY(0);
}